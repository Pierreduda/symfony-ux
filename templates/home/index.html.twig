{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block main %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <div class="p-5" style="font-size: 1.3em;">
            <span
            {{ stimulus_controller('symfony/ux-typed', {
                strings: [
                    'Test Symfony UX!',
                    'Symfony UX Typed',
                    'Symfony UX Autocomplete',
                    'Symfony UX Chart',
                ],
                loop: true,
                showCursor: true,
                cursorChar: 'âœ¨',
            }) }}
            </span>
        </div>
    </div>
    <div class="mb-5">
        {% if form is defined %}
            {{ component('address-form', {
                address: address,
            }) }}
        {% endif %}
    </div>
    <div class="mx-5">
        {{ component('address-list') }}
    </div>
    <div class="mt-5">
        {{ render_chart(chart, {'class': 'my-chart'}) }}
    </div>
    {{ component('alert-flash', {
        type: 'danger',
        message: 'Danger !'
    }) }}
    {#
    {{ component('confirm-modal', {
        selfId: 'confirm-1',
        elementId: 'submit',
        message: '',
        confirmUrl: '',
        cancelUrl: '',
    }) }}
    #}
{% endblock %}
